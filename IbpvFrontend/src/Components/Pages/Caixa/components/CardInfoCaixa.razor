@using System.Globalization

<div class=" d-flex" style="background-color: rgb(255, 255, 255);">
    <div class="card-body">
        <div class="d-flex flex-row justify-content-between">
            <h3 class="card-title h5">@parametros.Nome</h3>
        </div>
        <div class="d-flex flex-row justify-content-between">
            <p class="card-text text-lg">Valor: @parametros.ValorTotal.ToString("c2",CultureInfo.CreateSpecificCulture("pt-BR"))</p>
        </div>
        <div class="d-flex flex-row justify-content-between">
            <button type="button" class="btn btn-outline-info btn-sm">mais informações</button>
            @* <button type="button" @onclick="onDeleteClicked" class="btn btn-outline-danger  btn-sm">excluir</button> *@
        </div>

    </div>
</div>
       

@code { 
    [Parameter]
    required public CaixaDTO parametros {get; set;}

    [Parameter]
    public EventCallback onDelete {get; set;}

    public void onDeleteClicked()
    {
        onDelete.InvokeAsync();
    }
}
        
